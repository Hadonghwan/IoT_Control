<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="294dp"
    android:layout_height="146dp"
    android:background="@drawable/round_shape"
    android:elevation="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_widget_title"
            android:layout_width="240dp"
            android:layout_height="33dp"
            android:elevation="10dp"
            android:text=" NSL.NGIoT"
            android:textSize="24dp"
            android:textStyle="bold"
            android:scrollbars="vertical" />

        <ImageButton
            android:id="@+id/imgbtn_widget_refresh"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/click_refresh"
            android:text="새로고침" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_widget_calendar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_water"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="10dp" />

        <ImageView
            android:id="@+id/img_person"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="10dp" />

        <ImageView
            android:id="@+id/img_coffee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="10dp" />

        <ImageView
            android:id="@+id/img_a4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="10dp" />
    </LinearLayout>

</LinearLayout>
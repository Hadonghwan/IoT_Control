<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PasswordReissuanceActivity">


    <TextView
        android:id="@+id/pwReissuance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:text="비밀번호 재발급"
        android:textStyle="bold"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/line_remove"
        android:ems="10"
        android:hint="이름 : "
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/idEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="id : (학번을 입력하세요) "
        android:background="@drawable/line_remove"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/securitynumEditText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="주민번호 : "
        android:background="@drawable/line_remove"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/reissuanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:text="재발급" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="50dp"
    tools:context=".PasswordReissuanceActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:text="비밀번호 재발급"
        android:textStyle="bold"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/member_re_name"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/line_remove"
        android:hint="이름 :"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/member_re_id"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/line_remove"
        android:hint="ID : (학번을 입력하세요)"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/member_re_mail"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/line_remove"
        android:hint="E-Mail :"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_pw_re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="재발급 신청" />

</LinearLayout>
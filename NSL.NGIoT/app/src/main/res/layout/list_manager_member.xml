<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_manager_member"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        card_view:cardElevation="20dp"
        card_view:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/cardview_shadow_end_color">

            <TextView
                android:id="@+id/manager_member_number"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="number"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/manager_member_name"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="name"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:maxLength="4" />

            <TextView
                android:id="@+id/manager_member_phone"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="phone"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxLength="13" />

            <TextView
                android:id="@+id/manager_member_course"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="course"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxLength="10" />

            <TextView
                android:id="@+id/manager_member_group"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="group"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxLength="10" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>